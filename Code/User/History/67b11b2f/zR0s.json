{
  // Font settings
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontSize": 13,
  "editor.lineHeight": 1.3,
  "terminal.integrated.fontFamily": "'Gohu GohuFont 11', monospace",
  "terminal.integrated.fontSize": 11,

  // Gruvbox Dark Hard color theme
  "workbench.colorTheme": "Gruvbox Dark Hard",

  // Custom terminal colors matching your Alacritty config
  "workbench.colorCustomizations": {
    // Background and foreground
    "terminal.background": "#1d2021",
    "terminal.foreground": "#fbf1c7",

    // Cursor
    "terminalCursor.background": "#1d2021",
    "terminalCursor.foreground": "#fbf1c7",

    // Selection
    "terminal.selectionBackground": "#fbf1c7",

    // Normal colors
    "terminal.ansiBlack": "#32302f",
    "terminal.ansiRed": "#fb4934",
    "terminal.ansiGreen": "#b8bb26",
    "terminal.ansiYellow": "#fabd2f",
    "terminal.ansiBlue": "#83a598",
    "terminal.ansiMagenta": "#d3869b",
    "terminal.ansiCyan": "#8ec07c",
    "terminal.ansiWhite": "#ebdbb2",

    // Bright colors
    "terminal.ansiBrightBlack": "#7c6f64",
    "terminal.ansiBrightRed": "#fb4934",
    "terminal.ansiBrightGreen": "#b8bb26",
    "terminal.ansiBrightYellow": "#fabd2f",
    "terminal.ansiBrightBlue": "#83a598",
    "terminal.ansiBrightMagenta": "#d3869b",
    "terminal.ansiBrightCyan": "#8ec07c",
    "terminal.ansiBrightWhite": "#fbf1c7",

    // Editor colors to match
    "editor.background": "#1d2021",
    "editor.foreground": "#fbf1c7",
    "editorCursor.foreground": "#fbf1c7",
    "editor.selectionBackground": "#504945",
    "editor.lineHighlightBackground": "#32302f"
  },
  "workbench.startupEditor": "none",
  "editor.minimap.enabled": false,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true

  // Smooth scrolling settings
  "editor.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
}

